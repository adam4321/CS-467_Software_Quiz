{{!-- Home dashboard view - using express handlebars --}}

<title>Quiz Soft | Dashboard</title>

{{!-- Container for the dashboard --}}
<div id="top-row-container">
    <div id="dashboard-container" class="mdl-card mdl-shadow--2dp">

        <div class="mdl-card__title mdl-color-text--white dashboard-top-bar">
            <h2 class="mdl-card__title-text">Dashboard</h2>
        </div>

            <div class="mdl-card__supporting-text mdl-color-text--grey-600">
                <p style="font-size: large; font-weight: bold;">Hello {{displayName}}</p>

                <img style="height: 50px; border-radius: 50%;" src={{picture}}>
                <p style="font-size: large; font-weight: bold; display: inline-block;">{{email}}</p>

                
            </div>

        </div>
    </div>

</div>
