{{!-- Home dashboard view - using express handlebars --}}

<title>Quiz Soft | Builder</title>
<link type="text/css" rel="stylesheet" href="css/quiz-builder-page.css">

{{!-- Container for the dashboard --}}
<div id="top-row-container">
    <div id="dashboard-container" class="mdl-card mdl-shadow--2dp">

        <div class="mdl-card__title mdl-color-text--white dashboard-top-bar">
            <h2 class="mdl-card__title-text">Quiz Builder</h2>
        </div>

        <div id="quiz-container">
            <!--Unwritten route in action -->
            <form id="quiz_form" action="/quiz_create" method="get">
                <label class="quiz_title">NAME QUIZ</label>
                <br>
                <input type="text" id="quiz_title" placeholder="Enter quiz name">
                <p></p>

                <label for="question">CATEGORY: </label>
                <br>
                <input type="text" id="category" placeholder="Enter Question">
                <p></p>

                <label for="question">TIME LIMIT: </label>
                <br>
                <input type="text" id="time_limit" placeholder="Enter Question">
                <p></p>

                <button id="choose_all_btn" class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored question-btn"> 
                    Start Building Quiz
                </button>
            </form>
        </div> 
    </div>
</div>
