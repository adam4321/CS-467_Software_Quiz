{{!-- Home dashboard view - using express handlebars --}}

<title>Quiz Soft | Builder</title>

{{!-- Container for the dashboard --}}
<div id="top-row-container">
    <div id="dashboard-container" class="mdl-card mdl-shadow--2dp">

        <div class="mdl-card__title mdl-color-text--white dashboard-top-bar">
            <h2 class="mdl-card__title-text">Quiz Builder</h2>
        </div>

            <div class="mdl-card__supporting-text mdl-color-text--grey-600">
                <p style="font-size: large; font-weight: bold;">Hello Quiz Builder World!</p>
                
                <div class="quiz-content">
                    <form>
                        <ol id="quiz-questions">

                        </ol>
                    </form>

        <div class="add-question">
            <label for="question">Question: </label>
            <input type="text" id="question" placeholder="Enter Question">
            <br>Enter Answers to Question <br>
            <ul>
                <li>
                    <input type="text" id="firstAnswer" placeholder="Enter Answer">
                </li>
                <li>
                    <input type="text" id="secondAnswer" placeholder="Enter Answer">
                </li>
                <li>
                    <input type="text" id="thirdAnswer" placeholder="Enter Answer">
                </li>
                <li>
                    <input type="text" id="forthAnswer" placeholder="Enter Answer">
                </li>
                <br>Plese enter correct answer the same as you entered it above.
                <li>
                    <input type="text" id="answer" placeholder="Enter Correct Answer">  
                </li>
            </ul>     
            <button type="button">Add Question</button>
            </div>
        </div>
                
    </div>
</div>