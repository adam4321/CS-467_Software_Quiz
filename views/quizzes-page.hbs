{{!-- Home dashboard view - using express handlebars --}}

<title>Quiz Soft | Saved Quizzes</title>
<link type="text/css" rel="stylesheet" href="css/quizzes-page.css">

{{!-- Container for the dashboard --}}
<div id="top-row-container">
    
    {{#if quizzes}}

        {{!-- If the user has quizzes --}}
        <div id="dashboard-container" class="mdl-card mdl-shadow--2dp table-responsive">

            <div class="mdl-card__title mdl-color-text--white dashboard-top-bar">
                <h2 class="mdl-card__title-text">My Quizzes</h2>
            </div>

            <div class="mdl-card__supporting-text mdl-color-text--grey-600">

                <img id="profile-image" src={{photo}}>
                <p id="profile-email">{{email}}</p>
                
                <div id="upload-div">
                    <p id="upload-txt">Upload a Quiz</p>
                    <label id="upload-btn" class="btn-style">
                        <input
                            type="file" 
                            class="btn-style" 
                            id="upload-hidden"
                            accept=".quiz"
                        >
                        Upload
                    </label>
                </div>
            
                {{!-- Display No quizzes OR Table that displays the user's quizzes --}}
                <table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp" id="recordTable">
                    <thead>
                        <tr>
                            <th class="mdl-data-table__cell--non-numeric">Quiz Name</th>
                            <th class="mdl-data-table__cell--non-numeric">Category</th>
                            <th class="mdl-data-table__cell--non-numeric">Time Limit</th>
                            <th class="mdl-data-table__cell--non-numeric">Questions</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody id="table-body">
                        {{#each this.quizzes}}
                        <tr>
                            <td class="mdl-data-table__cell--non-numeric"><div class="quiz-name">{{name}}</div></td>
                            <td class="mdl-data-table__cell--non-numeric"><div class="quiz-category">{{category}}</div></td>
                            <td class="mdl-data-table__cell--non-numeric"><div class="user-numbers">{{timeLimit}} min</div></td>
                            <td class="mdl-data-table__cell--non-numeric"><div class="user-numbers">{{questions.length}}</div></td>
                            <td>
                                <input 
                                    type="button" 
                                    value="Delete"
                                    class="btn-style" 
                                    onclick="deleteQuiz(`recordTable`, this, `{{_id}}`);"
                                >
                            </td>
                            <td>
                                <input 
                                    type="button" 
                                    value="Download" 
                                    class="btn-style"
                                    id="downloadBtn"
                                    onclick="downloadQuiz(`recordTable`, this, `{{_id}}`);"
                                >
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>

    {{else}}

        {{!-- No quizzes --}}
        <div id="dashboard-container-empty" class="mdl-card mdl-shadow--2dp">

            <div class="mdl-card__title mdl-color-text--white dashboard-top-bar">
                <h2 class="mdl-card__title-text">My Quizzes</h2>
            </div>

            <div class="mdl-card__supporting-text mdl-color-text--grey-600 no-quiz-content">

                <img id="profile-image" src={{photo}}>
                <p id="profile-email">{{email}}</p>

                <div id="upload-div">
                    <p id="upload-txt">Upload a Quiz</p>
                    <label id="upload-btn-empty" class="btn-style">
                        <input
                            type="file" 
                            class="btn-style" 
                            id="upload-hidden"
                            accept=".quiz"
                        >
                        Upload
                    </label>
                </div>

                <hr id="no-quiz-break">
                <div id="no-quiz-div">
                    <img id="question-logo" src="images/logo.png"/>
                    <p id="no-quiz-txt">No Quizzes Created</p>
                </div>

            </div>
        </div>

    {{/if}}

</div>

<script src="js/quizzes-page-client.js"></script>
