{{!-- Login page view - using express handlebars --}}

<title>Quiz Soft</title>
<link type="text/css" rel="stylesheet" href="css/login-page.css">

{{!-- Container for the dashboard --}}
<div id="login-container" class="mdl-card mdl-shadow--2dp">

    <div class="mdl-card__title mdl-color-text--white dashboard-top-bar">
        <h2 class="mdl-card__title-text">Please Log In</h2>
    </div>

    <div class="mdl-card__supporting-text mdl-color-text--grey-600">

        <p id="g-signin-text" class="signin-btn-text">
            Sign in with Google
        </p>
        <a href = 'http://localhost:3500/auth/google'>
            <img class="login-btns" id="g-signin" src="images/g_signin.png" alt="Google sign in button">
        </a>

        <p class="signin-btn-text">
            Sign in with LinkedIn
        </p>
        <a href = 'http://localhost:3500/auth/outlook'>
            <img class="login-btns" id="outl-signin" src="images/linked_signin.png" alt="Outlook sign in button">
        </a>

        <p class="signin-btn-text">
            Email and Password
        </p>
        <button 
            class="mdl-button mdl-js-button mdl-button--raised login-btns" 
            id="register-button" 
            onclick="window.location.href = `http://localhost:3500/register`" 
        >Login | Register
        </button>

    </div>
</div>


