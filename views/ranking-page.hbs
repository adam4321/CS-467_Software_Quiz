{{!-- Settings view - using express handlebars --}}

<title>Quiz Soft | Job Postings</title>
<link type="text/css" rel="stylesheet" href="css/ranking-page.css">

{{!-- Container for the dashboard --}}
<div id="top-row-container">
  
    {{#if postings}}

        {{!-- If the user has postings --}}
        <div id="dashboard-container" class="mdl-card mdl-shadow--2dp">

            <div class="mdl-card__title mdl-color-text--white dashboard-top-bar">
                <h2 class="mdl-card__title-text">Job Postings</h2>
            </div>

            <div class="mdl-card__supporting-text mdl-color-text--grey-600 quiz-content">
                <div id="profile-div">
                    <img id="profile-image" src={{photo}}>
                    <p id="profile-email">{{email}}</p>
                </div>
        
                {{!-- Display No postings OR Table that displays the user's postings --}}
                <table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp" id="recordTable">
                    <thead>
                        <tr>
                            <th class="mdl-data-table__cell--non-numeric">Quiz Name</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody id="table-body">
                        {{#each this.quizzes}}

                            <tr id="rowModal{{@index}}">
                                <td class="mdl-data-table__cell--non-numeric">
                                    <div class="quiz-name">{{name}}</div>
                                </td>
                                <td>
                                    <input 
                                        type="button" 
                                        value="Download" 
                                        class="btn-style"
                                        id="downloadBtn"
                                        onclick="downloadQuiz(`recordTable`, this, `{{_id}}`, event);"
                                    >
                                </td>
                                <td>
                                    <input 
                                        type="button" 
                                        value="Delete"
                                        class="btn-style" 
                                        onclick="deleteQuiz(`recordTable`, this, `{{_id}}`, event);"
                                    >
                                </td>
                            </tr>

                        {{/each}}
                    </tbody>
                </table>

            </div>
        </div>

    {{else}}

        {{!-- No quizzes --}}
        <div id="dashboard-container" class="mdl-card mdl-shadow--2dp">

            <div class="mdl-card__title mdl-color-text--white dashboard-top-bar">
                <h2 class="mdl-card__title-text">Job Postings</h2>
            </div>

            <div class="mdl-card__supporting-text mdl-color-text--grey-600 no-quiz-content">
                <div id="profile-div">
                    <img id="profile-image" src={{photo}}>
                    <p id="profile-email">{{email}}</p>
                </div>

                <hr id="no-quiz-break">
                <div id="no-quiz-div">
                    <img id="question-logo" src="images/logo.png"/>
                    <p id="no-quiz-txt">No Rankings Yet</p>
                </div>

            </div>
        </div>
   
    {{/if}}

</div>
