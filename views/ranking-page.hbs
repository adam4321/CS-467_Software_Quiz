{{!-- Settings view - using express handlebars --}}

<title>Quiz Soft | Ranking</title>
<link type="text/css" rel="stylesheet" href="css/ranking-page.css">

{{!-- Container for the dashboard --}}
<div id="top-row-container">
  
    {{#if this.rankings}}

        {{!-- If the user has postings --}}
        <div id="dashboard-container" class="mdl-card mdl-shadow--2dp">

            <div class="mdl-card__title mdl-color-text--white dashboard-top-bar">
                <h2 class="mdl-card__title-text">Ranking</h2>
            </div>

            <div class="mdl-card__supporting-text mdl-color-text--grey-600 posting-content">
                <p id="title-div">{{title}}</p>

                <div id="back-div">
                    <p id="back-txt">Job Postings</p>
                    <button id="back-btn" class="btn-style" onclick="goBack()">Back</button>
                </div>
        
                {{!-- Display No postings OR Table that displays the user's postings --}}
                <table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp" id="recordTable">
                    <thead>
                        <tr>
                            <th class="mdl-data-table__cell--non-numeric quiz-rank">Rank</th>
                            <th class="mdl-data-table__cell--non-numeric">Email</th>
                            <th class="mdl-data-table__cell--non-numeric">Score</th>
                            <th class="mdl-data-table__cell--non-numeric">Time</th>
                        </tr>
                    </thead>

                    <tbody id="table-body">

                        {{#each rankings}}
                            <tr id="rowModal{{@index}}">
                                <td>
                                    <div class="quiz-rank">{{inc @index}}</div>
                                </td>

                                <td class="mdl-data-table__cell--non-numeric">
                                    <div class="email-txt">{{candidate_email}}</div>
                                </td>

                                <td class="user-numbers mdl-data-table__cell--non-numeric">
                                    <div >{{round quizScore}}%</div>
                                </td>

                                <td class="user-numbers mdl-data-table__cell--non-numeric">
                                    <div >{{quizTotalTime}} min</div>
                                </td>
                            </tr>


                            {{!-- The Modal --}}
                            <div id="modal{{@index}}" class="modal">
                                {{!-- Modal content --}}
                                <div class="modal-content square-card mdl-card--expand mdl-shadow--2dps mdl-color-text--black-600">
                                    <span class="close">&times;</span>
                                    {{#with ../associatedQuiz.quiz}}
                                    <fieldset>
                                        <h5><b>Job Posting: </b>{{../../title}}</h5>
                                        <h6><b>Quiz Name: </b>{{this.name}}</h6>
                                        <h6><b>Email: </b>{{../candidate_email}}</h6>
                                        <h6><b>Time Used: </b>{{../quizTotalTime}} minutes</h6>
                                        <h6><b>Score: </b>{{../quizScore}}%</h6>
                                    </fieldset>
                                    <hr>

                                    {{!-- Iterate through each question and display with respect to quizType --}}
                                    {{#each_question this.questions questions.length}}
                                    <div>
                                        <fieldset>
                                            <h5>Q{{inc @q_index}}</h5>
                                            <p>   
                                                {{#if (quiz_type_expose this "mult-choice")}}
                                                    <label><i>{{quiz_question_expose this 0}}</i></label></br>
                                                    {{#each_answer this}}                                         
                                                        <input type = "radio"
                                                            id = "Q{{@q_index}}_{{this.a_index}}"
                                                            class = "mult-choice"
                                                            value = "{{this.a_index}}"
                                                            disabled
                                                            {{#with ../quizKey}}
                                                                {{#if (eq_str_num this.[0] ../this.a_index)}}
                                                                    checked
                                                                {{/if}}
                                                            {{/with}}
                                                            
                                                        />
                                                        <label for = "Q{{@q_index}}_{{this.a_index}}">{{this.[0]}}</label></br>
                                                    {{/each_answer}}
                                                    <input type="radio" style="display:none;" name="{{@q_index}}" id="default-mult-choice" class="mult-choice" value=""/>
                                                {{/if}}

                                                {{#if (quiz_type_expose this "true-false")}}
                                                    <label><i>{{quiz_question_expose this 0}}</i></label></br>
                                                        <input type = "radio"
                                                            id = "Q{{@q_index}}_0"
                                                            class = "true-false"
                                                            value = "true"
                                                            disabled
                                                            {{#with this.quizKey}}
                                                                {{#if (eq this.[0] 'true')}}
                                                                    checked
                                                                {{/if}}
                                                            {{/with}}
                                                            {{!-- {{#if (this.)}}

                                                            {{/if}} --}}
                                                        />
                                                        <label for = "Q{{@q_index}}_0">True</label></br>
                                                        <input type = "radio"
                                                            id = "Q{{@q_index}}_1"
                                                            class = "true-false"
                                                            value = "false"
                                                            disabled
                                                            {{#with this.quizKey}}
                                                                {{#if (eq this.[0] 'false')}}
                                                                    checked
                                                                {{/if}}
                                                            {{/with}} 
                                                        />
                                                        <label for = "Q{{@q_index}}_1">False</label></br>
                                                {{/if}}

                                                {{#if (quiz_type_expose this "fill-blank")}}
                                                    <label><i>{{quiz_question_expose this 0}} </i>___<i> {{quiz_question_expose this 1}}</i></label></br>   
                                                        <input type = "text"
                                                            name = "{{@q_index}}"
                                                            id = "Q{{@q_index}}_0"
                                                            class = "fill-blank"
                                                            disabled
                                                            {{#with this.quizKey}}
                                                                value = "{{this.[0]}}"
                                                            {{/with}}
                                                        /></br>
                                                {{/if}}

                                                {{#if (quiz_type_expose this "check-all")}}
                                                    <label><i>{{quiz_question_expose this 0}}</i></label></br>
                                                    {{#each this.quizAnswers}}
                                                        <input type = "checkbox"
                                                            id = "Q{{@q_index}}_{{this.a_index}}"
                                                            class = "check-all"
                                                            value = "{{this}}"
                                                            disabled
                                                            {{#with ../quizKey}}
                                                                {{#each this}}
                                                                    {{#if (eq_str_num this @../index)}}
                                                                        checked
                                                                    {{/if}}
                                                                {{/each}}
                                                            {{/with}}
                                                        />
                                                        <label >{{this}}</label></br>
                                                    {{/each}}
                                                {{/if}}
                                            </p>
                                        </fieldset>
                                    </div>
                                    {{/each_question}}
                                    
                                    {{/with}}
                                    <hr>
                                    <div id="quiz-comment-container" class="square-card mdl-card--expand mdl-card mdl-shadow--2dp">
                                        <fieldset>
                                            <label>Optional Comments:</label></br>
                                                <textarea id="quiz-comment" name="comment" rows="10" cols="30">{{quizComment}}</textarea></br>
                                        </fieldset>
                                    </div>
                                    
                                </div>
                            </div>


                        {{/each}}

                    </tbody>
                </table>

            </div>
        </div>

    {{else}}

        {{!-- No quizzes --}}
        <div id="dashboard-container" class="mdl-card mdl-shadow--2dp">

            <div class="mdl-card__title mdl-color-text--white dashboard-top-bar">
                <h2 class="mdl-card__title-text">Ranking</h2>
            </div>

            <div class="mdl-card__supporting-text mdl-color-text--grey-600 no-posting-content">
                <p id="title-div">{{title}}</p>

                <div id="back-div">
                    <p id="back-txt">Job Postings</p>
                    <button id="back-btn" class="btn-style" onclick="goBack()">Back</button>
                </div>

                <hr id="no-posting-break">
                <div id="no-posting-div">
                    <img id="question-logo" src="images/logo.png"/>
                    <p id="no-posting-txt">No Rankings Yet</p>
                </div>

            </div>
        </div>
   
    {{/if}}

</div>

<script src="js/ranking-client.js"></script>
